<section class='flex flex-col justify-center w-full md:w-1/2 lg:w-1/3'>
  <h1 class='font-bold mb-4 text-2xl w-full text-center text-primary'>Please
    Sign In</h1>
  <form
    {{on 'submit' this.authenticate}}
    class='px-8 flex flex-col justify-center items-center w-full'
  >
    <Base::Zinput @label='Email' @type='email' @value={{this.email}} />
    <Base::Zinput @label='Password' @type='password' @value={{this.password}} />
    <Base::Zbutton @type='submit'>Sign In</Base::Zbutton>
  </form>
</section>